function void InitSkills()
{
    for (int i = 0; i < MAX_CATEGORIES; i++)
        for (int j = 0; j < MAX_SKILLS; j++)
        {
            Skills[i][j].Name = SkillDataBase[i][j].Name;
            Skills[i][j].Cost = SkillDataBase[i][j].Cost;
            Skills[i][j].MaxLevel = SkillDataBase[i][j].MaxLevel;
            Skills[i][j].Description = SkillDataBase[i][j].Description;
            Skills[i][j].Use = SkillDataBase[i][j].Use;
        };
};

